# Chelsea FC Scouting System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# Database Configuration
# ============================================================
# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scouting_db
DB_USER=your_username
DB_PASSWORD=your_password

# Connection pool settings
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10

# ============================================================
# Application Settings
# ============================================================
# Debug mode (set to false in production)
DEBUG=true

# Application port
APP_PORT=8050

# Application host (0.0.0.0 for all interfaces)
APP_HOST=127.0.0.1

# ============================================================
# LLM Configuration (Optional)
# ============================================================
# Anthropic API (for Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI API (alternative)
OPENAI_API_KEY=your_openai_api_key

# LLM Settings
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=30

# ============================================================
# Caching Configuration
# ============================================================
# Enable/disable caching
CACHE_ENABLED=true

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL=3600

# ============================================================
# Logging Configuration
# ============================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
LOG_FILE=logs/scouting_system.log

# ============================================================
# Security Settings
# ============================================================
# Secret key for session management (generate a random string)
SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8050,http://127.0.0.1:8050
